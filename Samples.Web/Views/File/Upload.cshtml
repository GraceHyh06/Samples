@model Samples.Web.Models.File.UploadViewModel;
@{
}
@using (Html.BeginForm("Upload", "File", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <h3>Load File</h3>
    <div class="row" style="margin-top: 2em;">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label" for="FileBase">选择文件:</label>
                <input asp-for="FileBases" type="file" multiple="multiple"/>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-file-upload"></i> 上传
    </button>
}